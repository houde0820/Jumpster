<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Jumpster" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sport_primary</item>
        <item name="colorOnPrimary">@color/sport_on_primary</item>
        <item name="colorPrimaryContainer">@color/sport_primary_variant</item>
        <item name="colorOnPrimaryContainer">@color/sport_on_primary</item>
        
        <item name="colorSecondary">@color/sport_secondary</item>
        <item name="colorOnSecondary">@color/sport_on_secondary</item>
        <item name="colorSecondaryContainer">@color/sport_secondary_variant</item>
        
        <item name="android:colorBackground">@color/sport_background</item>
        <item name="colorSurface">@color/sport_surface</item>
        <item name="colorOnSurface">@color/sport_on_surface</item>
        <item name="colorSurfaceVariant">@color/sport_surface_light</item>
