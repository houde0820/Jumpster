<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sport_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sport_background"
        app:title="@string/title_daily_record"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.JS.Title"
        app:titleTextColor="@color/sport_on_background"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/sport_on_background" />

    <TextView
        android:id="@+id/text_day_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025-10-30 Record"
        android:textSize="16sp"
        android:textColor="@color/sport_text_secondary"
        android:padding="16dp"/>
    
    <!-- 折线图卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/sport_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            
            <TextView
                android:id="@+id/text_chart_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_daily_trend"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/sport_on_surface"
                android:gravity="center"
                android:paddingBottom="4dp"/>
            
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_details"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/sport_text_secondary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_entries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_today_entry"/>

</LinearLayout>
