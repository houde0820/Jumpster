<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/sport_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sport_background"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/sport_on_background"
        app:title="@string/title_monthly_stats"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.JS.Title"
        app:titleTextColor="@color/sport_on_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_month_stats"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/sport_on_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_month_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Month Total: 0"
            android:textSize="14sp"
            android:textColor="@color/sport_text_secondary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/text_week_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Week Total: 0"
            android:textSize="14sp"
            android:textColor="@color/sport_text_secondary"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/text_selected_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_select_day"
            android:textSize="14sp"
            android:textColor="@color/sport_text_secondary"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/week_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"/>

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cv_dayViewResource="@layout/item_calendar_day"/>
    </LinearLayout>
</LinearLayout>
