<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sport_primary"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:title="本月统计"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.JS.Title"
        app:titleTextColor="@color/sport_on_primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本月跳绳统计"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_month_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本月合计：0"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/text_week_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本周合计：0"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/text_selected_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择某一天查看累计"
            android:textSize="14sp"
            android:textColor="#777"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/week_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"/>

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cv_dayViewResource="@layout/item_calendar_day"/>
    </LinearLayout>
</LinearLayout>
