<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sport_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/sport_primary"
            app:title="今日跳绳"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.JS.Title"
            app:titleTextColor="@color/sport_on_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-10-30"
            android:textSize="14sp"
            android:textColor="#777"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/text_today_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/text_count_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="今日累计：0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="#111" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.JS.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/card_total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入本次数量或新累计数"
                android:inputType="number"
                android:digits="0123456789"
                android:importantForAutofill="no"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/row_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/til_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="追加"
                style="@style/Widget.JS.Button"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/sport_primary"
                android:textColor="@color/sport_on_primary" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="覆盖"
                style="@style/Widget.JS.Button.Outlined"
                app:cornerRadius="20dp"
                app:strokeColor="@color/sport_secondary"
                app:strokeWidth="2dp"
                android:textColor="@color/sport_secondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_today_history_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="本日操作记录"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row_buttons"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_today_entries"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutAnimation="@anim/layout_fall_down"
            app:layout_constraintTop_toBottomOf="@id/text_today_history_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.dp.jumpster.ui.FireworksView
        android:id="@+id/fireworks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
